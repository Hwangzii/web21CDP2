@page
@model WebApplication1.Pages.clients.LoginModel
@{
}

<br />
<h2>LOGIN</h2>

@if (Model.errorMessages.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessages </strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="post">

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Tài khoản</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="user_name" value="@Model.Account.user_name">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Mật khẩu</label>
        <div class="col-sm-6">
            <input type="password" class="form-control" name="password" value="@Model.Account.password">
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">ĐĂNG NHẬP</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Clients" role="button">Hủy</a>
        </div>
    </div>
</form>
