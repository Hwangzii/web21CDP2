@using Microsoft.AspNetCore.Identity
@using WEB_21CDP2.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!-- Danh sách các mục điều hướng -->
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Nếu người dùng đã đăng nhập, hiển thị chào mừng và nút logout -->
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Quản lý">Xin chào @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Đăng xuất</button>
            </form>
        </li>
    }
    else
    {
        <!-- Nếu chưa đăng nhập, hiển thị liên kết đến trang đăng ký và đăng nhập -->
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
        </li>
    }
</ul>
